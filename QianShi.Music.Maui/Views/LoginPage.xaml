<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="QianShi.Music.Maui.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:QianShi.Music.Maui.ViewModels"
    Title="LoginPage"
    x:DataType="viewmodels:LoginPageViewModel">
    <StackLayout>
        <Entry Text="{Binding Account}" />
        <Entry IsPassword="True" Text="{Binding Password}" />
        <Button Command="{Binding LoginCommand}" Text="登录" />
    </StackLayout>
</ContentPage>
