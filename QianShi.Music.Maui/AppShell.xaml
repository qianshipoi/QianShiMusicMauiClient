<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QianShi.Music.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QianShi.Music.Maui"
    xmlns:views="clr-namespace:QianShi.Music.Maui.Views"
    Shell.FlyoutBehavior="Disabled">
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />
    <FlyoutItem Route="MainPage">
        <ShellContent Title="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>
</Shell>
